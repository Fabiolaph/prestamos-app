<%- include('../partials/header') %>
<h1>Crear Préstamo</h1>
<form method="POST" action="/prestamos/create">
  <div class="mb-3">
    <label>Cliente:</label>
    <select name="cliente" class="form-control" required>
      <% clientes.forEach(c => { %>
        <option value="<%= c._id %>"><%= c.nombre %></option>
      <% }) %>
    </select>
  </div>
  <div class="mb-3"><label>Monto:</label><input type="number" name="monto" class="form-control" required></div>
  <div class="mb-3"><label>Tasa de Interés (%):</label><input type="number" name="tasaInteres" class="form-control" required></div>
  <div class="mb-3"><label>Plazo (meses):</label><input type="number" name="plazo" class="form-control" required></div>
  <button type="submit" class="btn btn-success">Guardar</button>
</form>
<%- include('../partials/footer') %>
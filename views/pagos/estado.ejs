<%- include('../partials/header') %>
<h1>Estado de Cuenta de <%= cliente.nombre %></h1>
<table class="table table-striped">
  <thead><tr><th>Pr√©stamo</th><th>Monto</th><th>Saldo</th><th>Vencimiento</th><th>Estado</th></tr></thead>
  <tbody>
    <% prestamos.forEach(p => { %>
      <tr class="<%= p.estado === 'vencido' ? 'table-danger' : p.estado === 'pagado' ? 'table-success' : '' %>">
        <td><%= p.monto %></td>
        <td><%= p.saldoPendiente %></td>
        <td><%= p.fechaVencimiento.toDateString() %></td>
        <td><%= p.estado %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

  </ul>
</nav>
<script>
// Animación de entrada para el body
document.addEventListener('DOMContentLoaded', function() {
  document.body.classList.add('fade-in');
  // Animación de barra de navegación
  anime({
    targets: '.navbar',
    translateY: [-50, 0],
    opacity: [0, 1],
    duration: 900,
    easing: 'easeOutExpo'
  });
});
</script>